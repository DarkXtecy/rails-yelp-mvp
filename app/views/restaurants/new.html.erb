<h1>Add a New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <div class="form-group">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'], prompt: "Select a category" %>
  </div>
  <%= f.submit 'Create Restaurant', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to list', restaurants_path, class: 'btn btn-secondary' %>
